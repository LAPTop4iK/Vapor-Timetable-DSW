# PostgreSQL Database Configuration
DB_USER=vapor
DB_PASSWORD=your_secure_password_here
DB_NAME=dsw_timetable

# Application Settings
ENV=production
LOG_LEVEL=info

# Backend Mode
# - "live" = scrape university website on each request
# - "cached" = read from PostgreSQL (populated by SyncRunner)
DSW_BACKEND_MODE=cached

# Default Semester Dates
DSW_DEFAULT_FROM=2025-09-06
DSW_DEFAULT_TO=2026-02-08
DSW_DEFAULT_INTERVAL=semester

# Mock Mode (0 = disabled, 1 = enabled)
DSW_ENABLE_MOCK=0

# Cache TTLs (in seconds)
DSW_TTL_SCHEDULE_SECS=60          # 1 minute
DSW_TTL_SEARCH_SECS=259200        # 3 days
DSW_TTL_AGGREGATE_SECS=18000      # 5 hours
DSW_TTL_TEACHER_SECS=18000        # 5 hours

# Feature Flags (JSON)
DSW_FEATURE_FLAGS_JSON={"show_ads":true,"show_debug_menu":false}
DSW_FEATURE_FLAGS_VERSION=1.0.1

# Feature Parameters (JSON)
DSW_FEATURE_PARAMS_JSON={"premium_trial_duration":86400}
DSW_FEATURE_PARAMS_VERSION=1.0.1

# Sync Runner Configuration (для cron job)
# How often to sync (in milliseconds between requests)
SYNC_DELAY_GROUPS_MS=150          # Delay between group fetches
SYNC_DELAY_TEACHERS_MS=100        # Delay between teacher fetches
